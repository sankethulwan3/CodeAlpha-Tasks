  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Responsive Image Gallery</title>
  <style>
    *{box-sizing:border-box;margin:0;padding:0}
    body{font-family:system-ui,Segoe UI,Arial;background:#0f172a;color:#e5e7eb}
    h1{text-align:center;margin:16px 0}

    .filters{display:flex;gap:10px;justify-content:center;flex-wrap:wrap;margin-bottom:14px}
    .filters button{border:0;padding:8px 14px;border-radius:999px;background:#1f2937;color:#e5e7eb;cursor:pointer;transition:.2s}
    .filters button:hover,.filters button.active{background:#22c55e;color:#022c22}

    .gallery{display:grid;grid-template-columns:repeat(auto-fit,minmax(180px,1fr));gap:12px;padding:12px}
    .item{position:relative;overflow:hidden;border-radius:16px;cursor:pointer}
    .item img{width:100%;height:160px;object-fit:cover;transition:transform .35s,filter .35s}
    .item:hover img{transform:scale(1.1);filter:brightness(1.15)}
    .item::after{content:"View";position:absolute;inset:0;display:grid;place-items:center;background:rgba(0,0,0,.35);opacity:0;transition:.3s}
    .item:hover::after{opacity:1}

    .lightbox{position:fixed;inset:0;background:rgba(0,0,0,.85);display:none;align-items:center;justify-content:center;z-index:999}
    .lightbox.active{display:flex}
    .lightbox img{max-width:90vw;max-height:80vh;border-radius:18px;animation:fade .3s}
    .nav{position:absolute;top:50%;transform:translateY(-50%);font-size:34px;background:#111827;border-radius:50%;padding:8px 14px;cursor:pointer}
    .prev{left:20px}.next{right:20px}
    .close{position:absolute;top:16px;right:22px;font-size:28px;cursor:pointer}
    @keyframes fade{from{opacity:.2;transform:scale(.95)}to{opacity:1;transform:scale(1)}}

    @media (max-width:480px){.item img{height:130px}}
  </style>
